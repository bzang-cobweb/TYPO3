      # cat=Main Site : Site Config/012_PageTemplates/partialRootPath; type=string; label=Partial Root Path: Path to partia
      partialRootPath = EXT:bza_main/Resources/Private/Partials/Page/
      # cat=Main Site : Site Config/012_PageTemplates/templateRootPath; type=string; label=Template Root Path: Path to templates
